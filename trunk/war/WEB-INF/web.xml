<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<jsp-config>
  		<jsp-property-group>
    		<url-pattern>*.jsp</url-pattern>
   			<trim-directive-whitespaces>true</trim-directive-whitespaces>
    	</jsp-property-group>
	</jsp-config>
	<servlet>
		<servlet-name>Faq</servlet-name>
		<servlet-class>faq.controller.FaqServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faq</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DetailFaq</servlet-name>
		<servlet-class>faq.controller.DetailFaqServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DetailFaq</servlet-name>
		<url-pattern>/question/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Tag</servlet-name>
		<servlet-class>faq.controller.TagServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Tag</servlet-name>
		<url-pattern>/tag/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Author</servlet-name>
		<servlet-class>faq.controller.AuthorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Author</servlet-name>
		<url-pattern>/author/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AuthorAnwer</servlet-name>
		<servlet-class>faq.controller.AuthorAnwerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthorAnwer</servlet-name>
		<url-pattern>/author-anwer/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListQuestion</servlet-name>
		<servlet-class>faq.controller.ListQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListQuestion</servlet-name>
		<url-pattern>/list-questions/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AuthorQuestion</servlet-name>
		<servlet-class>faq.controller.AuthorQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthorQuestion</servlet-name>
		<url-pattern>/author-question/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Rss</servlet-name>
		<servlet-class>faq.controller.RssServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Rss</servlet-name>
		<url-pattern>/rss</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Sitemap</servlet-name>
		<servlet-class>faq.controller.SitemapServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Sitemap</servlet-name>
		<url-pattern>/sitemap</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Contact</servlet-name>
		<servlet-class>faq.controller.ContactServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Contact</servlet-name>
		<url-pattern>/contact</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CrawContent</servlet-name>
		<servlet-class>faq.craw.CrawContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CrawContent</servlet-name>
		<url-pattern>/craw_content</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CrawUrl</servlet-name>
		<servlet-class>faq.craw.CrawUrlServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CrawUrl</servlet-name>
		<url-pattern>/craw_url</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
</web-app>
